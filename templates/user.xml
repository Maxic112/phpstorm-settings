<templateSet group="user">
  <template name="&lt;php" value="&lt;?php&#10;$END$&#10;?&gt;&#10;" description="insert php block" toReformat="true" toShortenFQNames="true">
    <context>
      <option name="HAML" value="false" />
      <option name="HTML" value="true" />
      <option name="JAVA_SCRIPT" value="true" />
      <option name="JSP" value="false" />
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="//" value="/* $END$ */" shortcut="SPACE" description="css comment" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="CSS" value="true" />
      <option name="HAML" value="false" />
      <option name="JSP" value="false" />
    </context>
  </template>
  <template name="script:jquery" value="&lt;script src=&quot;https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js&quot; type=&quot;text/javascript&quot;&gt;&lt;/script&gt;" description="insert google cdn jquery" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="HAML" value="false" />
      <option name="HTML" value="true" />
      <option name="JSP" value="false" />
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="ss" value="//---------------------------------------------------$HEADER$------------------------------------------------------------------&#10;$END$" description="Separator string" toReformat="false" toShortenFQNames="true">
    <variable name="HEADER" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="CSS" value="true" />
      <option name="JAVA_SCRIPT" value="true" />
      <option name="JSON" value="true" />
      <option name="PHP" value="true" />
    </context>
  </template>
</templateSet>